<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
    android:id="@+id/include2"
    layout="@layout/toolbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bobble.bobblesampleapp.activities.MainActivity"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gifs"
                    style="@style/TextStyle.Title.Sub"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_transparent_87"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvGifs"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle.Title.Sub"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="Stickers"
                    android:textSize="16sp"
                    android:textColor="@color/black_transparent_87"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSticker"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/black_transparent_26"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black_transparent_87"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:text="@string/get_more_gifs_stikers_non_bobble_keyboard"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/black_transparent_26"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMore"
                    android:layout_width="match_parent"
                    android:layout_height="236dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/ivGoogleplaystore"
                    android:layout_width="186dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/get_it_on_google_play_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    />
            </LinearLayout>
        </ScrollView>
        <include layout="@layout/pop_up_sharing"/>
    </FrameLayout>
</LinearLayout>